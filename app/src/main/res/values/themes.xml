<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Open_Weater" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--TextView container theme -->
    <style name="CustomTextInputLayoutTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <!--Input container theme -->
    <style name="CustomTextInputLayoutContainerTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">@color/white</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="placeholderTextColor">@color/white</item>
        <item name="counterTextColor">@color/white</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="CustomEditTextStyle">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>
</resources>